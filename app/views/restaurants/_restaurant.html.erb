<div id="<%= dom_id restaurant %>">
  <p>
    <strong>Name:</strong>
    <%= restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= restaurant.address %>
  </p>

  <p>
    <strong>Phone number:</strong>
    <%= restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= restaurant.category %>
  </p>

  <h5>Reviews</h5>
  <ul>
    <% restaurant.reviews.each do |review| %>
    <br>
    <li><strong>Rating:</strong>
      <%= review.rating %></li>
    <li><strong>Content:</strong>
      <%= review.content %></li>
    <% end %>
  </ul>
</div>
